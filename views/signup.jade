extends layout
block content
  .col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-sign-in  Signup

    // Show authentication messages, if any
    if message.length
      .alert.alert-danger= message

    // Login form
    form(action='/signup', method='post')
      .form-group
        label Email
        input.form-control
      .form-group
        label Password
        input.form-control

      button.btn.btn-warning.btn-lg Login

    hr

    p Already have an account?
      a(href='/login') Login

    p Or go 
      a(href='/') home.
