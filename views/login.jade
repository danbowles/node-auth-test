extends layout
block content
  .col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-sign-in  Login

    // Show authentication messages, if any
    if message.length
      .alert.alert-danger= message

    // Login form
    form(action='/login', method='post')
      .form-group
        label Email
        input.form-control
      .form-group
        label Password
        input.form-control

      button.btn.btn-warning.btn-lg Login

    hr

    p Need an account? 
      a(href='/signup') Signup

    p Or go 
      a(href='/') home.
